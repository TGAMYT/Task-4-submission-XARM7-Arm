 <robot name="Xarm7"> <!-- This encapsulate the entirety of the robot -->
    <link name="base_link">  <!-- This specifies the link properties -->
         <visual> <!-- This tag specifies the visual appearance of the link -->
             <geometry> <!-- This link specifies the shape and size of the link  -->
                <box size="0.01 0.01 0.01"/>  <!--This command creates a box in 3d space according to the values specified -->
            </geometry>
        </visual>
    </link>

    <link name="link_0">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> 
            <!-- The origin tag represents the position and rotation with respect to its parent link -->
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link_base.stl" scale="1.0 1.0 1.0"/>
                <!-- This sources an already built mesh into the work space -->
            </geometry>
        </visual>
    </link>

    <link name="link1">
        <visual>
        <origin xyz="0.0 0.0 0.23" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link1.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link2">
        <visual>
        <origin xyz="0 0 0" rpy=" -1.57 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link2.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link3">
        <visual>
        <origin xyz="0 0 0" rpy=" 0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link3.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link4">
        <visual>
        <origin xyz="0 0 0" rpy=" 1.57 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link4.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link5">
        <visual>
        <origin xyz="0 0 0" rpy=" 3.14 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link5.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link6">
        <visual>
        <origin xyz="0 0 0" rpy=" 1.57 3.14 3.14"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link6.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="link7">
        <visual>
        <origin xyz="0 0 0" rpy=" 0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/link7.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

    <link name="gripper">
        <visual>
        <origin xyz="0 0 0" rpy=" 0 3.14 0.0"/>
            <geometry>
                <mesh filename="package://xarm7_description/meshes/gripper_lite.stl" scale="1.0 1.0 1.0"/>
            </geometry>
        </visual>
    </link>

     <joint name="base-base_link" type="fixed"> <!-- This specifies the properties of joints for 2 links  -->
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
         <parent link="base_link"/> <!-- specifies the parent link -->
        <child link="link_0"/> <!-- specifies the child link -->
    </joint>

    <joint name="base_link-link1" type="revolute">
        <origin xyz="0.0 0.0 0.037" rpy="0.0 0.0 0.0"/>
        <parent link="link_0"/>
        <child link="link1"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="0" velocity="0"/>
    </joint>

    <joint name="link1-link2" type="revolute">
        <origin xyz="0 0.0 0.23" rpy="0 0.0 0.0"/>
        <parent link="link1"/>
        <child link="link2"/>
        <axis xyz="0.0 01 0.0"/>
        <limit lower="-2.0" upper="2.0" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link2-link3" type="revolute">
        <origin xyz="0 0.0 0.291" rpy="0 0.0 0.0"/>
        <parent link="link2"/>
        <child link="link3"/>
        <axis xyz="0.0 0 1"/>
        <limit lower="-2.2" upper="2.2" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link3-link4" type="revolute">
        <origin xyz="0.057 0 0" rpy="0 0.0 0.0"/>
        <parent link="link3"/>
        <child link="link4"/>
        <axis xyz="0.0 1 0"/>
        <limit lower="-4" upper="0" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link4-link5" type="revolute">
        <origin xyz="0.0782 0 -0.342" rpy="0 0.0 0.0"/>
        <parent link="link4"/>
        <child link="link5"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.140" upper="3.140" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link5-link6" type="revolute">
        <origin xyz="0.0022 0 0.005" rpy="0 0 0.0"/>
        <parent link="link5"/>
        <child link="link6"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.70" upper="3.140" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link6-link7" type="revolute">
        <origin xyz="0.076 0 -0.069" rpy="0 0.0 0.0"/>
        <parent link="link6"/>
        <child link="link7"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.140" upper="3.140" effort="0.0" velocity="0.0"/>
    </joint>

    <joint name="link7-gripper" type="fixed">
        <origin xyz="0.0 0 -0.028" rpy="0 0.0 0.0"/>
        <parent link="link7"/>
        <child link="gripper"/>
    </joint>

</robot>